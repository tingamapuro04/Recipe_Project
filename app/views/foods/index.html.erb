<p style="color: green"><%= notice %></p>

<div>
  <%= link_to "New food", new_food_path %>
</div>

<table id="foods", class="table table-dark ms-5">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Food</th>
      <th scope="col">Measurement Unit</th>
      <th scope="col">Unit Price</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @foods.each do |food| %>
      <%= render food %>
      
    <% end %>
  </tbody>
</table>